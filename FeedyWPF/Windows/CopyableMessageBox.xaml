<Window x:Class="FeedyWPF.Windows.CopyableMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FeedyWPF.Windows"
        mc:Ignorable="d"
        Title="CopyableMessageBox" Height="Auto" Width="Auto">
    <Grid>
        <DockPanel  HorizontalAlignment="Stretch" Height="Auto" Margin="10,10,10,10" VerticalAlignment="Stretch" Width="Auto" LastChildFill="True">
            
            <Button DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Bottom" IsDefault="True" Height="25" Width="100" Content="OK" Click="Button_Click" />
            <TextBox  Height="Auto" Width="Auto" x:Name="MessageTextBox" ScrollViewer.VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" TextWrapping="Wrap" IsReadOnly="True" Text="{Binding Message}"/>
        </DockPanel>
    </Grid>
</Window>
