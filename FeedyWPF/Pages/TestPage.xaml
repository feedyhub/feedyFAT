<Page x:Class="FeedyWPF.Pages.TestPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedyWPF.Pages"
      mc:Ignorable="d" d:DesignWidth="300"
      Title="TestPage" Height="67.03">
    <DockPanel HorizontalAlignment="Left" Height="Auto" LastChildFill="False" VerticalAlignment="Top" Width="Auto">
        <Label Content="{Binding Question.Text}" Name="labelTitl" DockPanel.Dock="Top"></Label>
        <DataGrid DockPanel.Dock="Bottom">
            <DataGrid.Columns>

            <DataGridTextColumn x:Name="answerColumn" Binding="{Binding Answer.Text}" Header="Antwort" IsReadOnly="True" Width="Auto" Visibility="Visible"/>
            <DataGridTextColumn x:Name="resultColumn" Binding="{Binding Result}" Header="Anzahl" IsReadOnly="True" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

    </DockPanel>

</Page>
