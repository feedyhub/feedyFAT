<local:BasePage x:Class="FeedyWPF.Pages.CreateQuestionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FeedyWPF.Pages"
      xmlns:models="clr-namespace:FeedyWPF.Models"
      mc:Ignorable="d" 
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
      Title="CreateQuestionsPage">

    <Page.Resources>

        <models:EnumBooleanConverter x:Key="enumBooleanConverter" />

        <DataTemplate x:Key="Default" DataType="{x:Type models:CreateQuestion}">
            <TextBlock>Fehler: Datatemplate konnte nicht gefunden werden.</TextBlock>
        </DataTemplate>

        <!--SET QUESTION TYPE HERE-->
        <DataTemplate x:Key="SetQuestionType" DataType="{x:Type models:CreateQuestion}">
            <DockPanel HorizontalAlignment="Stretch" Height="Auto" LastChildFill="False" VerticalAlignment="Stretch" Width="Auto">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">

                    <StackPanel DockPanel.Dock="Left">
                        <Label x:Name="label" Content="Fragetyp festlegen" Margin="10,5,0,0" VerticalAlignment="Top"/>
                        <StackPanel Orientation="Vertical" Margin="10,0,0, 0" DockPanel.Dock="Left">
                            <RadioButton IsChecked="{Binding Path=QuestionType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=MULTIPLE_CHOICE}">Multiple Choice</RadioButton>
                            <RadioButton IsChecked="{Binding Path=QuestionType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=SINGLE_CHOICE}">Single Choice</RadioButton>
                            <RadioButton IsChecked="{Binding Path=QuestionType, Converter={StaticResource enumBooleanConverter}, ConverterParameter=TEXT}">Text</RadioButton>
                        </StackPanel>
                    </StackPanel>

                    <StackPanel DockPanel.Dock="Right">
                        <Label x:Name="label2" Content="Anzahl Antwortmöglichkeiten" Margin="10,5,0,0"  VerticalAlignment="Top" />
                        <ComboBox x:Name="comboBox" Height="23" Width="50" ItemsSource="{Binding NumberOfAnswersList}" SelectedValue="{Binding Path=NumberOfAnswers, Mode=TwoWay}"/>
                    </StackPanel  >

                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Margin="0,0,10,10" HorizontalAlignment="Right">
                    <Button x:Name="NextButton" Content="Weiter"  Width="80" Click="NextButton_Click"   />
                </StackPanel>
            </DockPanel>
        </DataTemplate>

        <!--FILL_OUT HERE-->
        <DataTemplate x:Key="FillOut" DataType="{x:Type models:CreateQuestion}">
            <DockPanel HorizontalAlignment="Stretch" Height="Auto" LastChildFill="False" VerticalAlignment="Stretch" Width="Auto">
            <TextBox x:Name="QuestionText" Text="Was möchtest du wissen? Hier die Frage eingeben." Margin="10,10,10,0" DockPanel.Dock="Top" HorizontalAlignment="Stretch" TextWrapping="Wrap"  />

            <ListView ItemsSource="{Binding AnswerRows}"   DockPanel.Dock="Top" Margin="10,10,10,0" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                <ListView.View>
                        <GridView>
                     
                        <GridViewColumn Width="Auto">
                            <GridViewColumn.CellTemplate>
                                    <DataTemplate >
                                    <StackPanel Visibility="{Binding ColumnOne.IsVisible}">
                                        <TextBox Width="100" Text="{Binding ColumnOne.Text}"/>
                                            <RadioButton HorizontalAlignment="Center"></RadioButton>
                                    </StackPanel>
                                 
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>

                            <GridViewColumn Width="Auto" >
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate >
                                        <StackPanel Visibility="{Binding ColumnTwo.IsVisible}">
                                            <TextBox  Width="100" Text="{Binding ColumnTwo.Text}"/>
                                            <RadioButton HorizontalAlignment="Center"></RadioButton>
                                        </StackPanel>

                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>


                            <GridViewColumn Width="Auto">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                        <StackPanel Visibility="{Binding ColumnThree.IsVisible}">
                                            <TextBox Width="100" Text="{Binding ColumnThree.Text}"/>
                                            <RadioButton HorizontalAlignment="Center"></RadioButton>
                                    </StackPanel>
                                  
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

                <Button Content="Weiter" Click="NextButton_Click" DockPanel.Dock="Bottom" Width="80" HorizontalAlignment="Right" Margin="0,10,10,0"/>
            </DockPanel>
        </DataTemplate>



    </Page.Resources>

    <!--Definition of View-->
    <DockPanel x:Name="ViewDockPanel"  ScrollViewer.CanContentScroll="False" LastChildFill="True" Margin="10,10,10,10" >

        <Label Content="Neue Fragen Fragebogen erstellen" DockPanel.Dock="Top"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right"  DockPanel.Dock="Bottom">
            <Button x:Name="CloseTabButton" Content="Tab Schließen" Margin="10,10,5,0" />
            <Button x:Name="FinishedButton" Content="Seite als .CSV Datei speichern" Margin="5,10,10,0" />
            
        </StackPanel>

        <ListView ItemsSource="{Binding CreateQuestions}"   Margin="10,10,10,0" ScrollViewer.CanContentScroll="False" ScrollViewer.VerticalScrollBarVisibility="Auto" >
            <ListView.View>
                <GridView>
                    <!--DataTemplate for Evaluation-->
                    <GridViewColumn Width="500">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate DataType="{x:Type models:CreateQuestion}">
                                <ContentControl Content="{Binding }">
                                    <ContentControl.Style>
                                        <Style TargetType="{x:Type ContentControl}">

                                            <!-- Default Template -->
                                            <Setter Property="ContentTemplate" Value="{StaticResource Default}" />

                                            <!-- Triggers to change Template -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Progress}" Value="Question_TYPE">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource SetQuestionType}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Progress}" Value="FILL_OUT">
                                                    <Setter Property="ContentTemplate" Value="{StaticResource FillOut}" />
                                                </DataTrigger>

                                            </Style.Triggers>
                                        </Style>
                                    </ContentControl.Style>
                                </ContentControl>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>

                    <!--Buttons for Adding and deleting questions-->
                    <GridViewColumn Header="Optionen">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel>
                                    <Button Content="Neue Frage" x:Name="AddQuestionButton" Click="AddQuestionButton_Click"   />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>


    </DockPanel>

    </local:BasePage>

